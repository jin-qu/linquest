{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "strictFunctionTypes": false,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "DOM"
    ]
  },
  "include": [
    "./index.ts",
    "./lib/**/*.ts",
    "./tests/**/*.ts"
  ]
}
